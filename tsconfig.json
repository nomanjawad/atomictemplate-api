{
    "compilerOptions": {
        "target": "ES2022",
        "module": "nodenext",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@controllers": [
                "src/controllers/index.ts"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@db": [
                "src/db/index.ts"
            ],
            "@db/*": [
                "src/db/*"
            ],
            "@middleware": [
                "src/middleware/index.ts"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}